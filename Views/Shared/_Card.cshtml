<hr>
<div class="col-sm-12 col-md-12 col-lg-12 ">

    <div class="d-flex justify-content-start align-items-center w-100">
        <p><img src="@Model.ImagemPequenaUrl" class=" " asp-append-version="true"></p>
        <div class="row col-10 d-flex ms-3">
            <h4><a asp-controller="Item" asp-action="Details" class="link-dark"
                    asp-route-itemId="@Model.ItemId">@Model.Nome</a></h4>
            <p>@Model.DescricaoCurta</p>
            <h3 class="text-danger">@Model.Preco.ToString("c")</h3>
        </div>

    </div>


    <div class="d-flex align-items-start justify-content-end">
        <p class="button d-flex  ">
            <a class="btn btn-danger" id="cartButton" asp-controller="Carrinho"
                asp-action="AdicionarItemNoCarrinhoCompra" asp-route-itemId="@Model.ItemId">
                <i class="bi bi-cart-plus-fill"></i> Adicionar
            </a>
        </p>
    </div>
    
</div>
<hr>
